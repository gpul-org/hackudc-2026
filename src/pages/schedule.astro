---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import EventSchedule from "../components/Schedule.astro";
import { schedule as scheduleData } from "../data/schedule";
import patternSvg from "../assets/pattern.svg";
---

<Layout title="Event Schedule">
  <main class="relative min-h-screen overflow-hidden">
    <!-- Tiled SVG pattern background -->
    <div
      class="absolute inset-0 pointer-events-none z-0 opacity-80"
      style={`background-image: url(${patternSvg.src}); background-repeat: repeat; background-size: 304px 304px;`}
    >
    </div>
    <div class="absolute inset-0 bg-[#0a0011]/80 pointer-events-none z-0"></div>
    <div class="absolute inset-0 pointer-events-none z-0" style="background: radial-gradient(ellipse at center, transparent 20%, rgba(0,0,0,0.6) 80%, rgba(0,0,0,0.97) 100%);"></div>
  

    <div class="flex min-h-screen flex-col relative z-20">
      <div class="mx-auto mt-8 w-full max-w-screen-lg px-4 sm:px-6">
        <a
          href="/"
          class="inline-flex items-center gap-2 rounded-lg border-2 border-amber-200 px-6 py-3 font-bold uppercase tracking-[0.2em] text-amber-200 transition-all duration-300 hover:scale-105 hover:bg-amber-200 hover:text-black hover:shadow-[0_0_20px_rgba(251,191,36,0.3)]"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to home
        </a>
      </div>

      <div class="mx-auto my-12 w-full max-w-screen-lg px-4 sm:px-6 grow">
        <h1
          class="mb-8 text-4xl font-black uppercase tracking-[0.25em] text-amber-300 drop-shadow-[0_4px_0_#7c3f00] sm:text-5xl"
        >
          Schedule
        </h1>

        <p
          class="text-left text-amber-100 text-base sm:text-md md:text-lg mb-12"
        >
          This schedule is approximate and subject to change. Check the <a
            href="https://discord.gg/bZG3vPdeN9"
            class="text-amber-300 underline hover:text-amber-400 transition-colors"
            >discord server</a
          > for the latest updates.
        </p>

        <EventSchedule days={scheduleData} />
      </div>

      <Footer />
    </div>
  </main>
</Layout>
