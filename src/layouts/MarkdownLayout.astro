---
import Layout from "./Layout.astro";

interface Props {
  frontmatter: {
    title: string;
  };
}

const { frontmatter } = Astro.props;

import Footer from "../components/Footer.astro";
---

<Layout title={frontmatter.title}>
  <main class="relative min-h-screen overflow-hidden">
    <!-- Global filter effects applied to entire page - positioned between video and content -->
    <div class="absolute inset-0 bg-[#0a0011]/50 pointer-events-none z-0"></div>
    <div
      class="absolute inset-0 opacity-60 bg-[repeating-linear-gradient(0deg,rgba(0,0,0,0.7),rgba(0,0,0,0.7)_1px,transparent_1px,transparent_4px)] mix-blend-multiply pointer-events-none z-0"
    >
    </div>
    <div
      class="absolute inset-0 pointer-events-none bg-[radial-gradient(ellipse_at_center,rgba(0,0,0,0)_20%,rgba(0,0,0,0.6)_60%,rgba(0,0,0,0.97)_100%)] z-0"
    >
    </div>

    <!-- Page content with higher z-index to be above filters -->
    <div class="flex min-h-screen flex-col relative z-20">
      <div class="mx-auto mt-8 w-full max-w-screen-lg px-4 sm:px-6">
        <a
          href="/"
          class="inline-flex items-center gap-2 rounded-lg border-2 border-amber-200 px-6 py-3 font-bold uppercase tracking-[0.2em] text-amber-200 transition-all duration-300 hover:scale-105 hover:bg-amber-200 hover:text-black hover:shadow-[0_0_20px_rgba(251,191,36,0.3)]"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to home
        </a>
      </div>
      <div
        class="prose prose-invert mx-auto my-12 max-w-screen-md grow px-4 sm:px-6"
      >
        <h1
          class="mb-8 text-4xl font-black uppercase tracking-[0.25em] text-amber-300 drop-shadow-[0_4px_0_#7c3f00] sm:text-5xl"
        >
          {frontmatter.title}
        </h1>
        <slot />
      </div>
      <Footer />
    </div>
  </main>
</Layout><style is:global>
  .prose {
    color: rgb(229, 231, 235);
  }

  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    color: #fcd34d;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.3em;
  }

  .prose h2 {
    margin-top: 2em;
    margin-bottom: 1em;
    font-size: 1.75rem;
    color: #fcd34d;
  }

  .prose h3 {
    margin-top: 1.6em;
    margin-bottom: 0.8em;
    font-size: 1.375rem;
    color: #fcd34d;
  }

  .prose strong {
    color: #fef3c7;
    font-weight: 700;
  }

  .prose a {
    color: #fde68a;
    text-decoration: none;
    transition: all 300ms;
  }

  .prose a:hover {
    color: #fef3c7;
    text-decoration: underline;
  }

  .prose ul,
  .prose ol {
    margin-top: 1em;
    margin-bottom: 1em;
  }

  .prose li {
    margin-top: 0.5em;
    margin-bottom: 0.5em;
    line-height: 1.75;
  }

  .prose hr {
    border-color: rgba(252, 211, 77, 0.2);
    margin-top: 3em;
    margin-bottom: 3em;
  }

  .prose p {
    margin-top: 1em;
    margin-bottom: 1em;
    line-height: 1.75;
  }

  .prose code {
    color: #fde68a;
    background-color: rgba(252, 211, 77, 0.1);
    padding: 0.2em 0.4em;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }

  .prose pre {
    background-color: rgba(10, 0, 17, 0.5);
    border: 1px solid rgba(252, 211, 77, 0.2);
    border-radius: 0.5rem;
  }

  .prose blockquote {
    border-left-color: #fcd34d;
    color: rgb(209, 213, 219);
  }
</style>
