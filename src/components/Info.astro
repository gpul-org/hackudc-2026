---
import InfoCarousel from "./InfoCarousel.astro";

const carouselSlides = [
  "HackUDC is back and bigger than ever! Join 400+ participants for 36 hours of non-stop hacking, learning, and networking.",
  "Grab your team of up to 4 people, pick a challenge and create innovative projects, with mentorship and workshops available throughout the event.",
  "Open source only. Bring your laptop, your ideas, and your energy. Let's make something cool together.",
  "Students and recent graduates are welcome - no prior coding experience required. There's a place for everyone!",
];
---

<section
  class="mt-20 sm:mt-32 md:mt-40 mb-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col items-center justify-center"
>
  <h1
    id="info-heading"
    class="text-3xl sm:text-4xl md:text-5xl font-black uppercase text-center tracking-[0.25em] text-amber-300 drop-shadow-[0_4px_0_#7c3f00] mb-8 sm:mb-12 md:mb-16"
  >
    About HackUDC
  </h1>

  <!-- Carousel -->
  <div class="w-full mb-16 sm:mb-20 md:mb-24">
    <InfoCarousel slides={carouselSlides} autoPlayInterval={5000} />
  </div>

  <!-- Impact Numbers -->
  <div class="w-full max-w-5xl mx-auto">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 sm:gap-8 md:gap-10">
      <div class="text-center group">
        <div
          class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black text-amber-300 mb-2 sm:mb-3 group-hover:scale-110 transition-transform duration-300"
        >
          +400
        </div>
        <div
          class="text-xs sm:text-sm md:text-base text-amber-100 tracking-[0.2em] uppercase group-hover:text-amber-200 transition-colors"
        >
          Participants
        </div>
      </div>

      <div class="text-center group">
        <div
          class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black text-amber-300 mb-2 sm:mb-3 group-hover:scale-110 transition-transform duration-300"
        >
          36H
        </div>
        <div
          class="text-xs sm:text-sm md:text-base text-amber-100 tracking-[0.2em] uppercase group-hover:text-amber-200 transition-colors"
        >
          Of Hacking
        </div>
      </div>

      <div class="text-center group">
        <div
          class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black text-amber-300 mb-2 sm:mb-3 group-hover:scale-110 transition-transform duration-300"
        >
          +3K‚Ç¨
        </div>
        <div
          class="text-xs sm:text-sm md:text-base text-amber-100 tracking-[0.2em] uppercase group-hover:text-amber-200 transition-colors"
        >
          in prizes
        </div>
      </div>

      <div class="text-center group">
        <div
          class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black text-amber-300 mb-2 sm:mb-3 group-hover:scale-110 transition-transform duration-300"
        >
          100%
        </div>
        <div
          class="text-xs sm:text-sm md:text-base text-amber-100 tracking-[0.2em] uppercase group-hover:text-amber-200 transition-colors"
        >
          Open source
        </div>
      </div>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="w-full max-w-5xl mx-auto mt-16 sm:mt-20 md:mt-24">
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-5 md:gap-6"
    >
      <a
        href="/info/information"
        class="flex h-36 flex-col justify-evenly rounded-lg border-2 border-[#fcd34d] bg-transparent p-4 duration-150 hover:scale-[1.03] hover:bg-[rgba(253,230,138,0.3)]"
      >
        <div class="text-2xl">‚ÑπÔ∏è</div>
        <div>
          <h2 class="text-xl font-bold text-[#fcd34d] uppercase tracking-wider">
            General Info
          </h2>
          <p class="text-sm font-light text-amber-100/80 mt-1">
            Dates, location, transportation, etc.
          </p>
        </div>
      </a>

      <a
        href="/schedule"
        class="flex h-36 flex-col justify-evenly rounded-lg border-2 border-[#fcd34d] bg-transparent p-4 duration-150 hover:scale-[1.03] hover:bg-[rgba(253,230,138,0.3)]"
      >
        <div class="text-2xl">üìÖ</div>
        <div>
          <h2 class="text-xl font-bold text-[#fcd34d] uppercase tracking-wider">
            Schedule
          </h2>
          <p class="text-sm font-light text-amber-100/80 mt-1">
            Event timeline & activities
          </p>
        </div>
      </a>

      <a
        href="/info/rules"
        class="flex h-36 flex-col justify-evenly rounded-lg border-2 border-[#fcd34d] bg-transparent p-4 duration-150 hover:scale-[1.03] hover:bg-[rgba(253,230,138,0.3)]"
      >
        <div class="text-2xl">üìã</div>
        <div>
          <h2 class="text-xl font-bold text-[#fcd34d] uppercase tracking-wider">
            Rules
          </h2>
          <p class="text-sm font-light text-amber-100/80 mt-1">
            Competition guidelines
          </p>
        </div>
      </a>

      <a
        href="#"
        class="flex h-36 flex-col justify-evenly rounded-lg border-2 border-[#fcd34d] bg-transparent p-4 duration-150 hover:scale-[1.03] hover:bg-[rgba(253,230,138,0.3)]"
      >
        <div class="text-2xl">üèÜ</div>
        <div>
          <h2 class="text-xl font-bold text-[#fcd34d] uppercase tracking-wider">
            Challenges
          </h2>
          <p class="text-sm font-light text-amber-100/80 mt-1">
            Challenges & prizes
          </p>
        </div>
      </a>
    </div>
  </div>
</section>
